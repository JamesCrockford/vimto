" vimto
" vim: syntax=vim

" load pathogen
source $HOME/.vimto/plugins/pathogen/autoload/pathogen.vim

" setup ignore list for pathogen
let g:pathogen_disabled = []

" disable a plugin
" call add(g:pathogen_disabled, 'example')

" infect
execute pathogen#infect('$HOME/.vimto/plugins/{}', '$HOME/.vimto/themes/{}', '$HOME/.vim/plugins/{}')
execute pathogen#helptags()

" source rc directory
for rcfile in split(globpath('$HOME/.vimto/rc', '*.vim'), '\n') 
  execute('source ' . rcfile)
endfor

