" no legacy stuff please
set nocompatible

" we live in 2014
set encoding=utf-8

" enable filetype detection/plugin/indent on
filetype plugin indent on

" don't create backup files
set nobackup

" places to save swp files
set directory+=,~/tmp,$TMP

" nice line endings
set ffs=unix,dos
set ff=unix

" terminal colours
set t_Co=256

